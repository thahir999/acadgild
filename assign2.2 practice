import java.util.Scanner;
public class Decisionmaking {

	public static void main (String s[])
	{
		Scanner S = new Scanner(System.in);
        System.out.println("enter the number of rows=column");
        int n = S.nextInt();
        int i, j;
        S.close();
        for (i = 1; i <= n; i++) {
            for (j = 1; j <= n; j++) {
                if (j == i) {
                    System.out.print("*");
                } else if (j == n - (i - 1)) {
                    System.out.print("*");
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
	
}
}
